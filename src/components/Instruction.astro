---
interface Props {
  title: string;
  description: string;
  image?: string;
}
const { title, description, image } = Astro.props;
---

<article class="card-instruction" data-aos="fade-up">
  <div class="details" data-aos="fade-right">
    <h2>{title}</h2>
    <p>
      {description}
    </p>
  </div>

  {image && <img src={image} alt="Instruction image" data-aos="fade-left" />}
</article>

<style>
  .card-instruction {
    display: flex;
    flex-direction: row;
    align-items: start;
    justify-content: space-between;
    margin: 50px;
    gap: 50px;
  }

  .details {
    width: 70%;
  }

  .details h2 {
    color: #ff9900;
    font-size: 2.4rem;
    font-weight: bold;
  }
  .details p {
    color: #585858;
    font-size: 1.2rem;
  }

  .card-instruction img {
    width: 30%;
    object-fit: cover;
    border-radius: 30px;
  }
</style>
