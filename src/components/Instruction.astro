---
interface Props {
  title: string;
  description: string;
  image?: string;
}
const { title, description, image } = Astro.props;
---

<article class="card-instruction" data-aos="fade-up">
  <div class="details" data-aos="fade-right">
    <h2>{title}</h2>
    <p>
      {description}
    </p>
  </div>

  {image && <img src={image} alt="Instruction image" data-aos="fade-left" />}
</article>

<style>
  .card-instruction {
    display: flex;
    flex-direction: row;
    align-items: start;
    justify-content: space-between;
    margin: 50px;
    gap: 50px;
  }

  .details {
    width: 70%;
  }

  .details h2 {
    color: #ff9900;
    font-size: 2.4rem;
    font-weight: bold;
  }

  .details p {
    color: #585858;
    font-size: 1.2rem;
  }

  .card-instruction img {
    width: 30%;
    object-fit: cover;
    border-radius: 30px;
  }

  @media (max-width: 1024px) {
    .card-instruction {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .details {
      width: 100%;
    }

    .card-instruction img {
      width: 80%;
      margin-top: 20px;
    }
  }

  @media (max-width: 768px) {
    .card-instruction {
      margin: 20px;
      gap: 20px;
    }

    .details h2 {
      font-size: 2rem;
    }

    .details p {
      font-size: 1rem;
    }

    .card-instruction img {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .details h2 {
      font-size: 1.8rem;
    }

    .details p {
      font-size: 0.9rem;
    }
  }
</style>
